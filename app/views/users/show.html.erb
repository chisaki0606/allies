<div class="user">
  <h1>ユーザーの詳細</h1>
  <div class="user-details">
    <img src="<%= "/images/#{@user.image}" %>" >
    <p>ユーザー名</p>
    <%= @user.name %>
    <p>セクシュアリティ</p>
    <%= @user.sexual %>
    <p>詳細なセクシュアリティ</p>
    <%= @user.sexual_details %>
    <p>恋愛対象</p>
    <%= @user.love %>
    <p>詳細な恋愛対象</p>
    <%= @user.love_details %>
    <div class="introduction">
      <p>自己紹介</p>
      <%= @user.introduction %>
    </div>
    <% if @user.id == @current_user.id %>
      <div class="user-details-edit">
        <%= link_to("編集", "/users/#{@user.id}/edit", class: "user-details-edit-button") %>
      </div>
    <% end %>

      <div class="user-details-message">
        <%= link_to("DMを送る", "/", class: "user-details-message-button") %>
      </div>

  </div>

    <div class="post-list">
      <h1>これまでの投稿</h1>
      <div class="post-item">
        <% @user.posts.each do |post| %>
          <div class="user-post">
            <div class="post-left">
              <img src="<%= "/images/#{@user.image}" %>" >
            </div>
            <div class="post-right">
              <div class="user-name">
                <%= link_to(post.user.name, "/users/#{post.user.id}") %><br>
              </div>
              <div class="user-content">
                <%= link_to post.content.truncate(40), "/posts/#{post.id}" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
