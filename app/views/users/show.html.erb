<div class="user-details">
  <img src="<%= "/images/#{@user.image}" %>" >
  <p>▶︎ユーザー名</p>
  <%= @user.name %>
  <p>▶︎セクシュアリティ</p>
  <%= @user.sexual %>
  <p>▶︎詳細なセクシュアリティ</p>
  <%= @user.sexual_details %>
  <p>▶︎恋愛対象</p>
  <%= @user.love %>
  <p>▶︎詳細な恋愛対象</p>
  <%= @user.love_details %>
  <p>▶︎自己紹介</p>
  <%= @user.introduction %>

  <div class="#">
    <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
    <% end %>
  </div>
</div>

<div class="#">
  <p>○これまでの投稿</p>
  <% @user.posts.each do |post| %>
    <div class="#">
      <div class="#">
        <%= link_to(post.user.name, "/users/#{post.user.id}") %>
      </div>
      <%= link_to(post.content, "/posts/#{post.id}") %>
    </div>
  <% end %>
</div>
