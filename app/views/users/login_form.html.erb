<div class="login">
  <h1>ログイン</h1>
  <div class="login-form">
    <div class="login-message">
      <% if @error_message %>
        <%= @error_message %>
      <% end %>
    </div>
    <%= form_with model: @user do |f| %>
      <p>メールアドレス</p>
      <li>
      <%= f.email_field :email %>
      </li>
      <p>パスワード</p>
      <li>
      <%= f.password_field :password %>
      </li>
      <%= f.submit "ログイン" %>
    <% end %>
  </div>
</div>