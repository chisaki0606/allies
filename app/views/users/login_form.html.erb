<div class="login">
  <h1>ログイン</h1>
  <div class="login-form">
    <div class="login-message">
      <% if @error_message %>
        <%= @error_message %>
      <% end %>
    </div>
    <%= form_tag("/login") do %>
      <p>メールアドレス</p>
      <input name="email">
      <p>パスワード</p>
      <input type="password" name="password">
      <input type="submit" value="ログイン">
    <% end %>
  </div>
</div>