<div class="contents">
  <ul class="contents-menus">
    <li>
      <%= link_to("新規投稿", "/posts/new") %>
    </li>
    <li>
      <%= link_to("ユーザー一覧から探す", "/users/index") %>
    </li>
    <li>
      <div class="accbox">
        <input type="checkbox" id="label1" class="cssacc" />
        <label for="label1">セクシュアリティと恋愛対象で絞り込む</label>
        <div class="accshow">
          セクシュアリティを選択<br>
          <input type="checkbox" name="female" value="female">female<br>
          <input type="checkbox" name="male" value="male">male<br>
          <input type="checkbox" name="FtM" value="FtM">FtM<br>
          <input type="checkbox" name="FtX" value="FtX">FtX<br>
          <input type="checkbox" name="MtF" value="MtF">MtF<br>
          <input type="checkbox" name="MtX" value="MtX">MtX<br>
          <input type="checkbox" name="Queer" value="Queer">Queer<br>
          <input type="checkbox" name="DSD" value="DSD">DSD<br>
          <input type="checkbox" name="その他" value="その他">その他<br>
          <br>
          恋愛対象を選択<br>
          <input type="checkbox" name="female" value="female">female<br>
          <input type="checkbox" name="male" value="male">male<br>
          <input type="checkbox" name="バイセクシュアル" value="バイセクシュアル">バイセクシュアル<br>
          <input type="checkbox" name="パンセクシュアル" value="パンセクシュアル">パンセクシュアル<br>
          <input type="checkbox" name="アセクシュアル" value="アセクシュアル">アセクシュアル<br>
          <input type="checkbox" name="その他" value="その他">その他<br>
          <br>
          <input type="submit" value="絞り込む">
        </div>
      </div>
    </li>
  </ul>
  <div class="contents-list">
    <% @posts.each do |post| %>
      <div class="contents-item">
        <div class="contents-left">
          <img src="<%= "/images/#{post.user.image}" %>" >
        </div>
        <div class="contents-right">
          <div class="contents-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            <span>
              ⚤ <%= post.user.sexual %> / ♡ <%= post.user.love %>
            </span>
          </div>
          <div class="contents-content">
            <%= link_to post.content.truncate(40), "/posts/#{post.id}" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="pagination">
    <div class="bootstrap">
      <%= paginate @posts %>
    </div>
  </div>
    
</div>
