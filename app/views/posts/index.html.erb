<div class="contents-menus">
  <%= link_to("新規投稿", "/posts/new") %>
  <%= link_to("ユーザー一覧から探す", "/users/index") %>
</div>

<div class="index-posts-contents">
  <% @posts.each do |post| %>
    <div class="posts-contents-item">
      <div class="#">
        <%= link_to(post.user.name, "/users/#{post.user.id}") %>
      </div>
      <%=link_to(post.content, "/posts/#{post.id}") %>
    </div>
  <% end %>
</div>
