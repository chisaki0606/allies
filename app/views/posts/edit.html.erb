<div class="post-edit">
  <h1>編集する</h1>
  <div class="post-edit-form">
    <%= form_with model: @post do |f| %>
      <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <%= f.text_area :content %>
      <%= f.submit "保存" %>
    <% end %>
  </div>
</div>


