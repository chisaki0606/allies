<div class="post">
  <h1>投稿する</h1>
  <div class="post-form">
    <%= form_tag("/posts/create") do %>
      <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <textarea name="content"><%= @post.content %></textarea>
      <input type="submit" value="投稿">
    <% end %>
  </div>
</div>

