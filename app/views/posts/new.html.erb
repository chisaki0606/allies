<div class="post">
  <h1>投稿する</h1>
  <div class="post-form">
    <%= form_with model: @posts do |form| %>
      <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <%= form.text_area :content %>
      <%= form.submit %>
    <% end %>
  </div>
</div>